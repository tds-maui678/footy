{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "ignoreDeprecations": "6.0",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "dist",
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "tests", "openapi/spec.yaml"],
  "exclude": ["node_modules", "dist"]
}